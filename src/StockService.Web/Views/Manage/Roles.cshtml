@model IEnumerable<StockService.Web.ViewModels.Manage.RoleViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h1>Yetkiler</h1>

<p>
    <a asp-action="CreateRole">Yeni Yetki Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "EditRole", new { id = item.Id}) |
                    @Html.ActionLink("Detay", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Sil", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Index">Kullanıcı listesine geri dön</a>
</p>